{
  "_copyright": "Copyright 2019 ForgeRock AS Licensed under the Apache License, Version 2.0 (the \"License\"); you may not use this file except in compliance with the License. You may obtain a copy of the License at http://www.apache.org/licenses/LICENSE-2.0 Unless required by applicable law or agreed to in writing, software distributed under the License is distributed on an \"AS IS\" BASIS, WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied. See the License for the specific language governing permissions andlimitations under the License.",
  "name" : "OBIE Assets Payment Resource Route",
  "baseURI" : "https://openidm.psd2accelerators.fridam.aeet-forgerock.com",
  "condition" : "${matches(request.uri.path, '^/openbanking/v3.1/domestic-payments')}",
  "capture" : [ "response", "request" ],
  "heap" : [ {
    "name" : "ReverseProxyHandler",
    "type" : "ReverseProxyHandler",
    "capture" : [ "response", "request" ]
  }, {
    "name" : "capture",
    "type" : "CaptureDecorator",
    "config" : {
      "captureEntity" : true,
      "captureContext" : true
    }
  }, {
    "name" : "ForgeRockClientHandler",
    "type" : "Chain",
    "config" : {
      "filters" : [ "TransactionIdOutboundFilter" ],
      "handler" : "ClientHandler"
    },
    "capture" : [ "response", "request" ]
  }, {
    "name" : "AmService-1",
    "type" : "AmService",
    "config" : {
      "url" : "https://login.psd2accelerators.fridam.aeet-forgerock.com/openam",
      "realm" : "/openbanking",
      "ssoTokenHeader" : "iPlanetDirectoryPro",
      "version" : "6.5",
      "agent" : {
        "username" : "ig_agent",
        "password" : "ig_agent"
      },
      "sessionCache" : {
        "enabled" : false
      }
    }
  } ],
  "handler" : {
    "type" : "Chain",
    "config" : {
      "filters" : [ {
        "name" : "UserInfoVerificationFilter",
        "type" : "UserInfoVerificationFilter",
        "config" : {
          "userInfoURL" : "https://login.psd2accelerators.fridam.aeet-forgerock.com/openam/oauth2/realms/root/realms/openbanking/userinfo"
        }
      }, {
        "name" : "OAuth2ResourceServerFilter-1",
        "type" : "OAuth2ResourceServerFilter",
        "config" : {
          "scopes" : [ "payments", "openid" ],
          "requireHttps" : false,
          "realm" : "OpenIG",
          "accessTokenResolver" : {
            "name" : "token-resolver-1",
            "type" : "TokenIntrospectionAccessTokenResolver",
            "config" : {
              "endpoint" : "https://login.psd2accelerators.fridam.aeet-forgerock.com/openam/oauth2/realms/root/realms/openbanking/introspect",
              "providerHandler" : {
                "type" : "Chain",
                "config" : {
                  "filters" : [ {
                    "type" : "HeaderFilter",
                    "config" : {
                      "messageType" : "request",
                      "add" : {
                        "Authorization" : [ "Basic ${encodeBase64('ig_agent_oauth2:ig_agent_oauth2')}" ]
                      }
                    }
                  } ],
                  "handler" : "ForgeRockClientHandler"
                }
              }
            }
          }
        }
      }, {
        "name" : "AssignmentFilter-TranslatePathToAMPolicy",
        "type" : "AssignmentFilter",
        "config" : {
          "onRequest" : [ {
            "target" : "${attributes.accountId}",
            "value" : "${split(request.uri.path, '/')[4]}"
          }, {
            "target" : "${request.uri.path}",
            "value" : "/openbanking/v3.1/domestic-payments/${attributes.openbankingIntentId}"
          } ]
        }
      }, {
        "name" : "PaymentSubmitParseFilter",
        "type" : "PaymentSubmitParseFilter",
        "config" : { }
      }, {
        "name" : "PolicyEnforcementFilter-OBIE Assets Authorization Filter-1",
        "type" : "PolicyEnforcementFilter",
        "config" : {
          "pepRealm" : "/openbanking",
          "application" : "PISP Authorization Policy",
          "claimsSubject" : {
            "sub" : "${contexts.oauth2.accessToken.info.sub}",
            "Initiation" : "${attributes.paymentSubmissionJson}",
            "iss" : "http://login.psd2accelerators.fridam.aeet-forgerock.com:80/oauth2/realms/root/realms/openbanking"
          },
          "amService" : "AmService-1"
        }
      }, {
        "name" : "AssignmentFilter-TranslatePathToIDM-1",
        "type" : "AssignmentFilter",
        "config" : {
          "onRequest" : [ {
            "target" : "${request.uri.path}",
            "value" : "${attributes.accountId != null ?  '/openidm/endpoint/paymentStatus' : '/openidm/endpoint/paymentIntent'}"
          }, {
            "target" : "${request.uri.query}",
            "value" : "_action=create"
          } ]
        }
      }, {
        "name" : "HeaderFilter-ChangeHostToIDM-1",
        "type" : "HeaderFilter",
        "config" : {
          "messageType" : "REQUEST",
          "remove" : [ "host" ],
          "add" : {
            "host" : [ "openidm.psd2accelerators.fridam.aeet-forgerock.com" ]
          }
        }
      }, {
        "name" : "HeaderFilter-AddAuthenticationHeadersForIDM-1",
        "type" : "HeaderFilter",
        "config" : {
          "messageType" : "REQUEST",
          "remove" : [ "X-OpenIDM-Username", "X-OpenIDM-Password" ],
          "add" : {
            "X-OpenIDM-Username" : [ "openidm-admin" ],
            "X-OpenIDM-Password" : [ "openidm-admin" ]
          }
        }
      } ],
      "handler" : "ReverseProxyHandler"
    }
  }
}
{
  "name" : "NextGenPSD2 Assets Account Initiate Consents Route",
  "baseURI" : "https://openidm.psd2accelerators.fridam.aeet-forgerock.com",
  "condition" : "${matches(request.uri.path, '^/nextgenpsd2/v1.3.2/consents$')}",
  "capture" : [ "response", "request" ],
  "heap" : [ {
    "name" : "ReverseProxyHandler",
    "type" : "ReverseProxyHandler",
    "capture" : [ "response", "request" ]
  }, {
    "name" : "capture",
    "type" : "CaptureDecorator",
    "config" : {
      "captureEntity" : true,
      "captureContext" : true
    }
  }, {
    "name" : "ForgeRockClientHandler",
    "type" : "Chain",
    "config" : {
      "filters" : [ "TransactionIdOutboundFilter" ],
      "handler" : "ClientHandler"
    },
    "capture" : [ "response", "request" ]
  }, {
    "name" : "AmService-1",
    "type" : "AmService",
    "config" : {
      "url" : "https://login.psd2accelerators.fridam.aeet-forgerock.com/openam",
      "realm" : "/nextgenpsd2",
      "ssoTokenHeader" : "iPlanetDirectoryPro",
      "version" : "6.5",
      "agent" : {
        "username" : "ig_agent",
        "password" : "ig_agent"
      },
      "sessionCache" : {
        "enabled" : false
      }
    }
  } ],
  "handler" : {
    "type" : "Chain",
    "config" : {
      "filters" : [ {
        "name" : "AssignmentFilter-TranslatePathToIDM-1",
        "type" : "AssignmentFilter",
        "config" : {
          "onRequest" : [ {
            "target" : "${request.uri.path}",
            "value" : "/openidm/endpoint/bgAccountAccessConsent"
          }, {
            "target" : "${request.uri.query}",
            "value" : "_action=create"
          }, {
            "target" : "${attributes.requestId}",
            "value" : "${request.headers['X-Request-ID'][0]}"
          } ]
        }
      }, {
        "name" : "HeaderFilter-ChangeHostToIDM-1",
        "type" : "HeaderFilter",
        "config" : {
          "messageType" : "REQUEST",
          "remove" : [ "host" ],
          "add" : {
            "host" : [ "openidm.psd2accelerators.fridam.aeet-forgerock.com" ]
          }
        }
      }, {
        "name" : "HeaderFilter-AddAuthenticationHeadersForIDM-1",
        "type" : "HeaderFilter",
        "config" : {
          "messageType" : "REQUEST",
          "remove" : [ "X-OpenIDM-Username", "X-OpenIDM-Password" ],
          "add" : {
            "X-OpenIDM-Username" : [ "openidm-admin" ],
            "X-OpenIDM-Password" : [ "openidm-admin" ]
          }
        }
      }, {
        "name" : "HeaderFilter-AddNextGenPSD2ResponseHeaders",
        "type" : "HeaderFilter",
        "config" : {
          "messageType" : "RESPONSE",
          "remove" : [ "Location" ],
          "add" : {
            "ASPSP-SCA-Approach" : [ "REDIRECT" ],
            "Content-Type" : [ "application/json" ],
            "X-Request-ID" : [ "${attributes.requestId}" ],
            "Location" : [ "https://openig.psd2accelerators.fridam.aeet-forgerock.com/nextgenpsd2/v1.3.2/consents/${response.entity.json.result.consentId}" ]
          }
        }
      } ],
      "handler" : "ReverseProxyHandler"
    }
  }
}